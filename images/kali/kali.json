{
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml"
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "install preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",                                                                                   
        "netcfg/get_hostname={{ .Name }} netcfg/get_domain=local fb=false debconf/frontend=noninteractive console-setup/ask_detect=false <wait>",                                                                                       
        "console-keymaps-at/keymap=us keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "debian-64",
      "headless": true,
      "http_directory": "http",
      "iso_url": "kali-linux-2020.4-live-amd64.iso",
      "iso_checksum": "sha256:4d764a2ba67f41495c17247184d24b7f9ac9a7c57415bbbed663402aec78952b",
      "output_directory": "kali-linux-rolling-base",
      "shutdown_command": "sudo shutdown -P now",
      "ssh_username": "kali",
      "ssh_password": "kali",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "vm_name": "kali-linux {{timestamp}}",
      "vmx_data": {
        "cupid.coresPerSocket": "1"
      }
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-04387c27258f75ab9",
      "instance_type": "t2.micro",
      "ssh_username": "kali",
      "ssh_keypair_name": "packer",
      "ssh_private_key_file": "packer.pem",
      "ami_name": "packed_kali {{timestamp}}"
    }
  ]
}

